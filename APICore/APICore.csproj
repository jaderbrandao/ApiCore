<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <Version>1.1.0</Version>
    <PackageReleaseNotes>Nesta versão 1.1.0 foi criado as extensões para adicionar e utilizar o swagger, como também o controle de versionamentos das API's.</PackageReleaseNotes>
    <Authors>JaderBrandao</Authors>
    <Description>Biblioteca para projetos de API's, contendo Middlewares e classes para documentação das API's através do framework swagger.</Description>
    <Copyright>JaderBrandao</Copyright>
    <PackageLicenseFile>License.txt</PackageLicenseFile>
    <RepositoryUrl>https://github.com/jaderbrandao/apicore</RepositoryUrl>
    <PackageProjectUrl>https://jaderbrandao.com.br</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Versioning.ApiExplorer" Version="4.2.0" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="5.6.3" />
  </ItemGroup>

  <ItemGroup>
    <None Include="License.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
